#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["Source/JediOrder.Web/JediOrder.Web.csproj", "Source/JediOrder.Web/"]
RUN dotnet restore "Source/JediOrder.Web/JediOrder.Web.csproj"
COPY . .
WORKDIR "/src/Source/JediOrder.Web"
RUN dotnet build "JediOrder.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "JediOrder.Web.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "JediOrder.Web.dll"]